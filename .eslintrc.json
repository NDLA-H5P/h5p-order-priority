{
  "globals": {
    "Mustache": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "eslint-config-ndla-h5p",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "jsdoc": {
      "preferredTypes": {
        "Function": "function"
      }
    }
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "jsdoc"
  ],
  "rules": {
    "valid-jsdoc": "off",
    "no-restricted-globals": [
      2,
      "event"
    ],
    "react/prop-types": 0,
    "react/jsx-uses-vars": [2],
    "react/jsx-uses-react": [2]
  }
}
